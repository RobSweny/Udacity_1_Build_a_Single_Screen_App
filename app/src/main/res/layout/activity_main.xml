<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"


    android:background="#45a2c7"
    >



        <View
            android:id="@+id/main_card_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"

            android:elevation="10dp"

            android:background="@drawable/view_corner_radius" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="150dp"
            android:elevation="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            />



        <ImageView
            android:id="@+id/left_cloud"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:background="@drawable/cloud_left"
            />

        <ImageView
            android:id="@+id/right_cloud"
            android:layout_width="180dp"
            android:layout_height="120dp"

            android:elevation="2dp"
            android:layout_gravity="right"
            android:background="@drawable/cloud_right"
            />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:layout_gravity="center_horizontal"

            android:layout_marginTop="50dp"
            android:elevation="5dp"
            
            android:background="@drawable/view_circle"
            />



</FrameLayout>