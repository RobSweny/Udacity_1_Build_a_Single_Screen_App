<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#45a2c7"
    >

    <View
        android:id="@+id/main_card_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/view_corner_radius"
        android:elevation="10dp" />


        <View
            android:id="@+id/left_cloud"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:background="@drawable/cloud_left"
            />

        <View
            android:id="@+id/right_cloud"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:layout_gravity="right"
            android:background="@drawable/cloud_right"
            />

        <View
            android:id="@+id/circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:elevation="5dp"
            android:background="@drawable/view_circle"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:elevation="15dp">


        <ImageView
            android:id="@+id/main_card_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Testing"
            android:layout_margin="25dp"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/linear_layout_text"
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:background="@drawable/main_card_tinted"
            android:elevation="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Testing"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Testing"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Testing"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>
</FrameLayout>